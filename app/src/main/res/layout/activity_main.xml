<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="es.jmoral.dam2.practicaEvaluable4.activities.MainActivity">

    <com.manolovn.trianglify.TrianglifyView
        android:id="@+id/trianglify"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cellSize="175"
        app:variance="75" />

    <ImageView
        android:id="@+id/imageViewTitulo"
        android:src="@drawable/titulo"
        android:layout_width="@dimen/dimen250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen80dp"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true" >

        <ImageView
            android:contentDescription="@string/desc_jugar"
            android:id="@+id/imageViewJugar"
            android:src="@drawable/jugar"
            android:layout_marginTop="@dimen/dimen250dp"
            android:layout_width="@dimen/dimen100dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:contentDescription="@string/desc_instrucciones"
            android:id="@+id/imageViewInstrucciones"
            android:src="@drawable/instrucciones"
            android:layout_width="@dimen/dimen220dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>
